@model TatilSeyahatSitesi.Models.Siniflar.BlogYorum
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<!DOCTYPE HTML>
<html>
<head>

    <link href="~/web2/css/bootstrap.css" rel='stylesheet' type='text/css' />
    <link href="~/web2/css/style.css" rel='stylesheet' type='text/css' />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Personal Blog Responsive web template, Bootstrap Web Templates, Flat Web Templates, Andriod Compatible web template,
	Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyErricsson, Motorola web design" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script type="~/web2/text/javascript" src="~/web2/js/move-top.js"></script>
    <script type="~/web2/text/javascript" src="~/web2/js/easing.js"></script>
</head>
<body>

    <div class="single">
        <div class="container">
            <div class="row">
                <div class="col-md-8 single-main">


                    @foreach (var x in Model.Deger1)
                    {
                        <div class="single-grid">


                            <img src="@x.BlogImage" alt="BlogResim" />
                            <br />
                            <h3> <a href="/Blog/BlogDetay/@x.ID">@x.Baslik</a></h3>
                            <p>
                                @x.Aciklama
                            </p>
                        </div>
                    }

                </div>
                    <div class="col-md-4 side-content">
                        <div class="recent">
                            <h3>Son Bloglar</h3>
                           
                            <ul>
                                @foreach (var item in Model.Deger3)
                                {
                                    <li><a href="/Blog/BlogDetay/@item.ID/">@item.Baslik</a></li>
                                }
                                </ul>
                        </div>
                        <div class="comments">
                            <h3>Son Yorumlar</h3>

                        @Html.Action("YorumBolumu","Blog")

                        </div>

                    </div>
                </div>

            </div>
        </div>
    
</body>
</html>


