@model TatilSeyahatSitesi.Models.Siniflar.BlogYorum

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<!DOCTYPE HTML>
<html>
<head>

    <link href="~/web2/css/bootstrap.css" rel='stylesheet' type='text/css' />
    <link href="~/web2/css/style.css" rel='stylesheet' type='text/css' />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Personal Blog Responsive web template, Bootstrap Web Templates, Flat Web Templates, Andriod Compatible web template,
	Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyErricsson, Motorola web design" />

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <!--end slider -->
    <!--script-->
    <script type="javascript" src="~/web2/js/move-top.js"></script>
    <script type="javascript" src="~/web2/js/easing.js"></script>
    <!--/script-->


</head>
<body>

    <div class="single">
        <div class="container">
            <div class="col-md-8 single-main">
                @foreach (var item in Model.Deger1)
                {
                    <div class="single-grid">


                        <img src="@item.BlogImage" alt="" />
                        <h2>@item.Baslik</h2>
                        <p>
                            @item.Aciklama
                        </p>
                    </div>
                    //List gelmese bile IEnumuerable oluşturduğumuz için foreach kullanıdk
                }


                @foreach (var y in Model.Deger2)
                {

                    <ul class="comment-list">
                        <li>
                            <img src="~/web2/images/avatar.png" alt="Alternate Text" class="img-responsive" />
                            <div class="desc">
                                <p>@y.KullaniciAdi :@y.Yorum ...</p>
                            </div>

                            <div class="clearfix"></div>
                        </li>
                    </ul>
                }
                <h3 style="color:deepskyblue">Bir Yorum Yapın</h3>
                <br />
              
                @Html.Action("YorumYap", "Blog")
            </div>

                <div class="col-md-4 side-content">
                    <div class="recent">
                        <h3>Son Bloglar</h3>
                            @foreach(var s in Model.Deger3)
            {
                        <ul>
                    <li><a href="/Blog/BlogDetay/@s.ID/">@s.Baslik</a></li>
                        </ul>
            }
                    </div>
                    <div class="comments">

                        <div class="recent">
                            <h3>Son Yorumlar</h3>
                            <ul>
                                @Html.Action("YorumBolumu", "Blog")
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>