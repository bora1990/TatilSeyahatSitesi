
@model List<TatilSeyahatSitesi.Models.Siniflar.OtelDetay>

@{
    ViewBag.Title = "Oteller";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<div class="container">


    @foreach (var item in Model)
    {
        <h5 class="card-title">@item.Otel.OtelAdi</h5>
        <div class="row">
            <div class="col-3 me-2 mt-3">
                <img src="@item.Resim1" class="card-img-top me-3" width="180px" height="186px">
            </div>
            <div class="col-3 me-2 mt-3">
                <img src="@item.Resim2" class="card-img-top me-3" width="180px" height="186px">
            </div>
            <div class="col-3 me-2 mt-3">
                <img src="@item.Resim3" class="card-img-top me-3" width="180px" height="186px">
            </div>

                <p class="card-text">@item.Otel.OtelAciklama.Substring(0, 40) ...</p>


            </div>

            }
   </div>


